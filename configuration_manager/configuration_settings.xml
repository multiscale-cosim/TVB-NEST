<?xml version="1.0" encoding="UTF-8" ?>
<settings>
    <orchestrator>
        <executors>
          <local>
            <command>mpirun</command>
            <n_tasks_option>-n</n_tasks_option>
            <n_tasks_default_value>2</n_tasks_default_value>
            <get_version_option>-V</get_version_option>
          </local>
          <cluster>
            <command>srun</command>
            <n_tasks_option>-n</n_tasks_option>
            <n_tasks_default_value>2</n_tasks_default_value>
            <get_version_option>--version</get_version_option>
          </cluster>
        </executors>
        <plans>
          <plans_dir>${CO_SIM_INSTALL_DIR}/co_simulations_plans/</plans_dir>
        </plans>
        <actions>
          <actions_dir>${CO_SIM_INSTALL_DIR}/co_simulations_actions/</actions_dir>
        </actions>
        <transformers>
          <transformers_dir>${CO_SIM_INSTALL_DIR}/transformers/</transformers_dir>
        </transformers>
        <visualizers>
          <visualizers_dir>${CO_SIM_INSTALL_DIR}/visualizers/</visualizers_dir>
        </visualizers>
    </orchestrator>
    <log_configurations>
        <version>1</version>
        <disable_existing_loggers>False</disable_existing_loggers>
        <formatters>
            <default>
                <format>%(asctime)s %(levelname)s %(name)s [%(processName)s:%(process)d] %(message)s</format>
            </default>
            <verbose>
                <format>%(asctime)s %(levelname)s %(name)s [%(processName)s:%(process)d] [%(threadName)s:%(thread)d] [%(filename)s:%(funcName)s:%(lineno)d] %(message)s</format>
            </verbose>
        </formatters>
        <handlers>
            <console>
                <class>logging.StreamHandler</class>
                <level>INFO</level>
                <formatter>default</formatter>
                <stream>ext://sys.stdout</stream>
            </console>
            <info_file>
                <class>logging.FileHandler</class>
                <level>INFO</level>
                <formatter>verbose</formatter>
                <filename>co_sim_default_logs.log</filename>
            </info_file>
            <error_file>
                <class>logging.handlers.RotatingFileHandler</class>
                <level>ERROR</level>
                <formatter>verbose</formatter>
                <filename>co_sim_default_error_logs.log</filename>
            </error_file>
        </handlers>
        <loggers>{}</loggers>
            <root>
                <level>DEBUG</level>
                <handlers>
                    <handlers>console</handlers>
                    <handlers>info_file</handlers>
                    <handlers>error_file</handlers>
                </handlers>
                <propagate>no</propagate>
            </root>
    </log_configurations>
</settings>
